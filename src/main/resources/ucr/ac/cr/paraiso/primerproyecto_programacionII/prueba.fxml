<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="ucr.ac.cr.paraiso.primerproyecto_programacionII.controller.PruebaController" xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <Label text="Seleccionar Patrón:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="patronComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="idTextField" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

    <Label text="Nombre:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="nameTextField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Contexto:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="contextoTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Problema:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="problemaTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Solución:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="solucionTextField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Ejemplos:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="ejemplosTextField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Clasificación ID:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="clasificacionTextField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Button text="Guardar" onAction="#guardarPatron" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
</GridPane>
